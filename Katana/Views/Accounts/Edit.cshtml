@model Katana.ViewModels.AccountEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Account.Id" />
            <div class="form-group row">
                <div class="col-4"><label asp-for="Account.Name" class="control-label"></label></div>
                <div class="col-8"><input asp-for="Account.Name" class="form-control" /></div>
            </div>
            <div class="form-group row">
                <div class="col-4"><label asp-for="SelectedEnvelopeID" class="control-label"></label></div>
                <div class="col-8">
                    <select asp-for="SelectedEnvelopeID" asp-items="@(new SelectList(Model.Envelopes, "Value", "Text"))">
                        <option value="">-- Select Envelope --</option>
                    </select>
                    <span asp-validation-for="Account.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col offset-4">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
